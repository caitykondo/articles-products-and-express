<h1>New Article</h1>
<form name="newArticle" id="newArticle" action="/articles" method="POST">
  <label for="title">Title</label>
  <input type="text" id="title" name= "title" value= "">

  <label for="body">Body</label>
  <input type="text" id="body" name= "body">

  <label for="author">Author</label>
  <input type="text" id="author" name="author">

  <input id= "newArticle" type="submit" value="Add Article">
</form>
{{#unless success.post}}
<p>Please fill out the missing fields</p>
{{/unless}}